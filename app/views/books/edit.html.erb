<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
  <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
            <%= f.text_field :title, autofocus: true, id:"book_title", placeholder: @book.title, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, autofocus: true, id:"book_body", placeholder: @book.body, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <%= link_to "Show", book_path(@book) %> |  <%= link_to "Back", books_path(@book) %>
      <% end %>
    </div>
  </div>
</div>