<h2>User info</h2>
<%= image_tag current_user.get_image(100, 100) %>
<table>
    <tr><th>name</th><th><%= current_user.name %></th></tr>
    <tr><th>introductuion</th><th><%= current_user.introduction %></th></tr>
</table>
<%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_image(80, 80) %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>