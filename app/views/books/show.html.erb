<h2>User info</h2>
<%= image_tag @book.user.get_image(100, 100) %>
<table>
    <tr><th>name</th><th><%= @book.user.name %></th></tr>
    <tr><th>introductuion</th><th><%= @book.user.introduction %></th></tr>
</table>
<%= link_to edit_user_path(@book.user.id), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
          <%= image_tag @book.user.get_image(100, 100) %><br>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to @book.title, book_path(@book) %>
      </td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>